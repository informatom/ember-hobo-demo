<div class="panel panel-default" {{bind-attr class="isDirty:panel-warning:panel-default"}}>
  <div class="panel-heading">
    <h3 class="panel-title">Consumable {{position}}
      <div class="pull-right">
        {{#if isDirty}}
          <button class="btn btn-success btn-xs" {{action "save"}}>
            <span class="glyphicon glyphicon-save" /> Save
          </button>
        {{/if}}

        {{#if wantsToDelete}}
          Are you sure?
          <button class="btn btn-danger btn-xs" {{action "delete"}}>
            <span class="glyphicon glyphicon-remove" /> Delete
          </button>
          <button class="btn btn-primary btn-xs" {{action 'toggle' 'wantsToDelete'}}>
            Cancel
          </button>
        {{else}}
          <button class="btn btn-danger btn-xs" {{action 'toggle' 'wantsToDelete'}}>
            <span class="glyphicon glyphicon-remove" /> Delete
          </button>
        {{/if}}
      </div>
    </h3>
  </div>

  <div class="panel-body">
    <form class="form-horizontal row" role="form">
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Type of Contract</label>
        <div class="col-sm-6">{{input type="text" value=contractType}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Product Number</label>
        <div class="col-sm-6">{{input type="text" value=productNumber}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Product Line</label>
        <div class="col-sm-6">{{input type="text" value=productLine}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Description</label>
        <div class="col-sm-6">{{input type="text" value=description}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Amount Total (Pcs.)</label>
        <div class="col-sm-6">{{input type="text" value=amount size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Yield (Pages)</label>
        <div class="col-sm-6">{{input type="text" value=theyield size=5}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Wholesale Price  (EUR)</label>
        <div class="col-sm-6">{{input type="text" value=wholesalePrice size=10}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Term  (months)</label>
        <div class="col-sm-6">{{input type="text" value=term size=2}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Consumption 1</label>
        <div class="col-sm-6">{{input type="text" value=consumption1 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Consumption 2</label>
        <div class="col-sm-6">{{input type="text" value=consumption2 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Consumption 3</label>
        <div class="col-sm-6">{{input type="text" value=consumption3 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Consumption 4</label>
        <div class="col-sm-6">{{input type="text" value=consumption4 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Consumption 5</label>
        <div class="col-sm-6">{{input type="text" value=consumption5 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Consumption 6</label>
        <div class="col-sm-6">{{input type="text" value=consumption6 size=1}}</div>
      </div>
    </form>
  </div>
</div>
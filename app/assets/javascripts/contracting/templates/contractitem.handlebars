<div class="panel panel-default" {{bind-attr class="isDirty:panel-warning:panel-default"}}>
  <div class="panel-heading">
    <h3 class="panel-title">Position {{position}}
      <div class="pull-right">
        {{#if isDirty}}
          <button class="btn btn-success btn-xs" {{action "save"}}>
            <span class="glyphicon glyphicon-save" /> Save
          </button>
        {{/if}}

        {{#if wantsToDelete}}
          Are you sure?
          <button class="btn btn-danger btn-xs" {{action "delete"}}>
            <span class="glyphicon glyphicon-remove" /> Delete
          </button>
          <button class="btn btn-primary btn-xs" {{action 'toggle' 'wantsToDelete'}}>
            Cancel
          </button>
        {{else}}
          <button class="btn btn-danger btn-xs" {{action 'toggle' 'wantsToDelete'}}>
            <span class="glyphicon glyphicon-remove" /> Delete
          </button>
        {{/if}}
      </div>
      </h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <form class="form-horizontal col-sm-6" role="form">
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Term (months)</label>
          <div class="col-sm-6">{{input type="text" value=term size=1}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Stert Date</label>
          <div class="col-sm-6">{{view Contracting.DatePickerField value=startdate}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Product Number</label>
          <div class="col-sm-6">{{input type="text" value=productNumber}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Description</label>
          <div class="col-sm-6">{{input type="text" value=description}}</div>
        </div>

        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Amount / Unit</label>
          <div class="col-sm-6">{{input type="text" value=amount size=3}} {{input type="text" value=unit size=3}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Marge (%)</label>
          <div class="col-sm-6">{{input type="text" value=marge size=1}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Monitoring (EUR)</label>
          <div class="col-sm-6">{{input type="text" value=monitoringRate size=1}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Volume B/W (Pages)</label>
          <div class="col-sm-6">{{input type="text" value=volumeBw size=4}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Volume Color (Pages)</label>
          <div class="col-sm-6">{{input type="text" value=volumeColor size=4}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">Discount (EUR)</label>
          <div class="col-sm-6">{{input type="text" value=discountAbs size=3}}</div>
        </div>
        <div class="col-sm-6 form-group">
          <label class="col-sm-6 control-label">VAT</label>
          <div class="col-sm-6">{{input type="text" value=vat size=1}}%</div>
        </div>
      </form>
      <div class="col-sm-6">
        <table class="table table-striped table-bordered table-hover table-condensed">
          {{contractitem-calendarlines item=this}}
        </table>
      </div>
    </div>
  </div>

  {{render 'consumableitems' consumableitems}}
</div>

{{outlet}}